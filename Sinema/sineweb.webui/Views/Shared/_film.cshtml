@model Film

<div class="card">
    <img class="card-img-top" src="~/img/@Model.ImageUrl" alt="">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
        <a asp-controller="Film" asp-action="Details" asp-route-id="@Model.FilmId" class="btn btn-primary">Detay</a>
    </div>
</div>   